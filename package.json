{
  "name": "api",
  "version": "1.0.0",
  "description": "Atisbalo Api",
  "private": true,
  "scripts": {
    "dev": "nodemon ./api/server.js",
    "start": "node ./api/server.js",
    "test": "jest --detectOpenHandles",
    "migrate:staging": "NODE_ENV=staging sequelize db:migrate",
    "migrate": "sequelize db:migrate",
    "db:init": "sequelize db:drop --env development && sequelize db:create --env development && sequelize db:migrate --env development && nodemon ./api/server.js"
  },
  "dependencies": {
    "bcrypt": "^4.0.1",
    "chalk": "^4.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "mysql2": "^2.1.0",
    "nodemailer": "^6.4.6",
    "redis": "^3.0.2",
    "sequelize": "^5.21.10"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "faker": "^4.1.0",
    "jest": "^26.0.1",
    "nodemon": "^2.0.3",
    "prettier": "2.0.5",
    "sequelize-cli": "^5.5.1",
    "supertest": "^4.0.2"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
